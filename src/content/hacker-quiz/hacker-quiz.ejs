    // for every question, show question, selected answer, correct answer, details
    round.questions.forEach((question, index) => {
      const event = events[index]
      const correctAnswer = question.options[0]
      const isCorrect = event.type == 'correct'

      const questionDiv = document.createElement('div')
      questionDiv.classList.add('summary-question')
      questionDiv.classList.add(isCorrect ? 'is-correct' : 'is-wrong')
      questionDiv.innerHTML = `
        <div class="summary-qhead">
          ${statusIcon(isCorrect)}
          <p class="summary-qtitle">${summaryI18n.questionLabel} ${index + 1}: ${question.question}</p>
        </div>

        <div class="summary-answers">
          <div class="summary-label">${summaryI18n.correctAnswerLabel}</div>
          <div class="summary-value"><strong>${correctAnswer}</strong></div>
        </div>

        <div class="summary-explain">
          <p>${question.details[0]}</p>
          ${
            !isCorrect
              ? `
                <div class="summary-answers summary-user-answer">
                  <div class="summary-label">${summaryI18n.yourAnswerLabel}</div>
                  <div class="summary-value"><strike>${event.selected}</strike></div>
                </div>
                <p>${question.details[question.options.indexOf(event.selected)]}</p>
              `
              : ''
          }
        </div>

        <div class="summary-footer">
          <div class="summary-feedback" data-question-index="${index}">
            <button class="summary-feedback-btn" type="button" data-vote="down" aria-label="${summaryI18n.thumbDownLabel}" aria-pressed="false">${thumbIcon(
              'down'
            )}</button>
            <button class="summary-feedback-btn" type="button" data-vote="up" aria-label="${summaryI18n.thumbUpLabel}" aria-pressed="false">${thumbIcon(
              'up'
            )}</button>
          </div>
        </div>
      `

      const upBtn = questionDiv.querySelector('[data-vote="up"]')
      const downBtn = questionDiv.querySelector('[data-vote="down"]')

      const applyVote = (vote) => {
        upBtn.classList.toggle('is-active', vote === 'up')
        downBtn.classList.toggle('is-active', vote === 'down')
        upBtn.setAttribute('aria-pressed', vote === 'up' ? 'true' : 'false')
        downBtn.setAttribute('aria-pressed', vote === 'down' ? 'true' : 'false')

        fetch(
          `/api/event?key=quiz-feedback-${topics[selectedIndex].id}-${index}-${vote}`
        )
      }

      upBtn.addEventListener('click', () => applyVote('up'))
      downBtn.addEventListener('click', () => applyVote('down'))

      summaryDiv.appendChild(questionDiv)
    })
  }

  lastTime = performance.now()
  loop()

  function restartQuiz() {
    window.location.reload()
  }

  setTimeout(() => {
    document.getElementById('spinner-start').focus()
    // scroll to spinner
    window.scrollTo({ top: 0, behavior: 'smooth' })
  }, 100)
</script>
