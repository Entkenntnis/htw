<% if (!props.accessible) { %>
  <p><i><%= t('locked')%></i></p>
<% } else { %><p>
    <% if (props.correct !== true) { %>
      <a href="/map" <%- App.config.historyBack ? `onclick="goBack(event, '/map')"` : ''%>><%= t('back') %></a><% if (props.hardMode) { %><span style="display: inline-block; margin-left:8px; margin-right: 8px; color: #313131">‚Ä¢</span>
      <span style="color:gray">üå∂Ô∏è <%= t('hard') %></span>
    <% } %><span style="display: inline-block; margin-left:8px; margin-right: 8px; color: #313131">‚Ä¢</span>
    <% } %>
    <span style="color: gray" title="<%= props.solvedBy == 1 ? t('solvedBy_one', {count: props.solvedBy}) : t('solvedBy_other', {count: props.solvedBy}) %><% if (props.lastSolved !== null) { %><%= ', ' + t('lastSolved', {ago: App.moment(props.lastSolved).locale(locale).fromNow(), name: props.lastSolvedUserName})%><% } %>">
      <%= props.ratio %>
    </span><% if (props.challenge.date) { %><span style="display: inline-block; margin-left:8px; margin-right: 8px; color: #313131">‚Ä¢</span>
      <span style="color:gray"><%= t('created')%> <%= App.moment(props.challenge.date).locale(locale).fromNow()%>
        <% if (props.challenge.author) { %>
          <%= t('by') %> <strong><%= props.challenge.author %></strong>
        <% } %>
      </span>
    <% } %><% if (!props.challenge.date && props.challenge.author) { %><span style="display: inline-block; margin-left:8px; margin-right: 8px; color: #313131">‚Ä¢</span>
        <span style="color:gray"><%= t('created')%> <%= t('by') %> <strong><%= props.challenge.author %></strong></span>
    <% } %><% if (props.correct !== true) { %>
      <span style="display: inline-block; margin-left:8px; margin-right: 8px; color: #313131">‚Ä¢</span><a href="/solvers/<%=props.challenge.id%>" style="color: gray;"><%=t('history')%></a><span style="display: inline-block; margin-left:8px; margin-right: 8px; color: #313131">‚Ä¢</span><% if (props.withComlink || (locale == 'en' && props.inMainArea)) { %><a href="/feedback/<%= props.challenge.id %>" style="color:gray"><%=locale == 'de'? 'Frage stellen' : 'ask a question'%></a><% } else if (props.inMainArea) { %><a href="/hints/<%= props.challenge.id %>" style="color:gray">Hinweise&nbsp;(<%= props.hintsCount%>)</a><% } else { %><a href="https://discord.gg/9zDMZP9edd" style="color:gray" target="_blank"><svg width="800px" height="800px" class="help-external-link" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="Interface / External_Link"><path id="Vector" d="M10.0002 5H8.2002C7.08009 5 6.51962 5 6.0918 5.21799C5.71547 5.40973 5.40973 5.71547 5.21799 6.0918C5 6.51962 5 7.08009 5 8.2002V15.8002C5 16.9203 5 17.4801 5.21799 17.9079C5.40973 18.2842 5.71547 18.5905 6.0918 18.7822C6.5192 19 7.07899 19 8.19691 19H15.8031C16.921 19 17.48 19 17.9074 18.7822C18.2837 18.5905 18.5905 18.2839 18.7822 17.9076C19 17.4802 19 16.921 19 15.8031V14M20 9V4M20 4H15M20 4L13 11" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></g></svg><%= t('discordHelp') %></a><% } %>
    <% } %>
  </p>

  <div style="height:16px"></div>

  <% if (props.answer) { %>
    <script>window.history.replaceState(null, null, window.location.href)</script>
    <p class="text-<%= props.correct === true ? App.config.styles.solutionClass_correct : App.config.styles.solutionClass_wrong %>">
      <% if (props.correct === 'none') { %>
        <strong><%= props.answer %></strong>
      <% } else { %>
        <strong><%= props.rawAnswer ? props.answer : `'${props.answer}'` %> <%= props.rawAnswer ? '' : props.correct ? t('correct') : t('wrong') %></strong>
      <% } %>
    </p>
  <% } %>

  <div style="height:16px"></div>

  <% if (props.correct === true) { %>
    <%- props.afterSolveText %>
    <% if (props.challenge.enableFeedback) { %>
      <div id="feedback-section" data-chal-id="<%= props.challenge.id %>">
        <p style="margin-top: 24px;"><%= t('feedback.heading') %></p>
        <ul class="feedback-list">
          <li style="margin-bottom: 12px;"><a href="/map" id="continue-button" class="feedback-link" data-key="fun"><%= t('feedback.fun') %></a></li>
          <li style="margin-bottom: 12px;"><a href="/map" class="feedback-link" data-key="learn"><%= t('feedback.learn') %></a></li>
          <li style="margin-bottom: 12px;"><a href="/map" class="feedback-link" data-key="nice"><%= t('feedback.nice') %></a></li>
          <li style="margin-bottom: 12px;"><a href="/map" class="feedback-link" data-key="ok"><%= t('feedback.ok') %></a></li>
        </ul>
      </div>
      <script>
        (function() {
          var container = document.getElementById('feedback-section');
          if (!container) return;
          var links = container.querySelectorAll('a');
          for (var i = 0; i < links.length; i++) {
            links[i].addEventListener('click', function (e) {
              e.preventDefault();
              try {
                var dataKey = this.getAttribute('data-key') || 'unknown';
                var chalId = container.getAttribute('data-chal-id');
                var eventKey = 'feedback_' + chalId + '_' + dataKey;
                var url = '/api/event?key=' + encodeURIComponent(eventKey);
                if (window.fetch) {
                  fetch(url)
                } else {
                  // Fallback
                  var img = new Image();
                  img.src = url;
                }
              } catch (err) {
                // ignore telemetry errors
              }
              var href = this.getAttribute('href') || '/map';
              // Replace question with thanks + manual continue button
              try {
                container.innerHTML = ''
                  + '<p style="margin-top: 24px;">' + "<%= t('feedback.thanks') %>" + '</p>'
                  + '<p><a href="' + href + '" id="continue-button" class="">' + "<%= t('continue') %>" + '</a></p>';
                var btn = document.getElementById('continue-button');
                if (btn && btn.focus) { btn.focus(); }
              } catch (e) {
                // If DOM update fails, fall back to direct navigation link display
                window.location.href = href;
              }
            });
          }
        })();
      </script>
    <% } else { %>
      <p><a href="/map" id="continue-button"><%= t('continue') %></a></p>
    <% } %>
  <% } else { %>
    <%- props.html %>
    <% if (!props.challenge.hidesubmit) { %>
      <form autocomplete="off" method="post" id="challenge_form" style="display: flex; align-items: center;">
        <input id="challenge_answer" class="form-control" type="text" name="answer" style="height: 32px; width: 200px;">
        <input type="submit" id="challenge_submit" class="btn btn-interaction" value="<%= t('go') %>" style="height: 32px; line-height: 1; margin-left: 10px;">
</form>
    <% } %>
  <% } %>

  <div style="height:200px"></div>

<% } %>

<style>@media (max-width: 480px) { .page-header { display: none; } }</style>

<% if (locale === 'de' && props.withComlink) { %>
  <style>
    @media (max-width: 1005px) {
      .comlink-spacer {
        height: 48px;
      }
    }
  </style>
  <div class="comlink-spacer"></div>
  <link rel="stylesheet" href="/comlink/styles.css">
  <script src="/comlink/<%=props.challenge.id%>.js"></script>
  <script src="/comlink/client.js"></script>
<% } %>